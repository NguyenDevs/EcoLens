<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true">

    <!-- MODERN CHAT FRAGMENT -->

    <!-- HEADER -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md"
            android:background="@color/background">

        <ImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/icon_xl"
                android:layout_height="@dimen/icon_xl"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/spacing_xs"
                android:src="@drawable/ic_back"
                app:tint="@color/text_primary"
                android:contentDescription="@string/back"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/my_garden_title"
                style="@style/TextAppearance.App.Headline3"/>

        <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="@dimen/icon_xl"
                android:layout_height="@dimen/icon_xl"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/spacing_xs"
                android:src="@drawable/ic_more_vert"
                app:tint="@color/text_primary"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/settings"/>

    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:background="#E0E0E0"
            android:layout_marginTop="-4dp"
            android:layout_marginStart="-20dp"
            android:layout_marginEnd="-20dp"
            android:layout_height="1.5dp"/>
    <!-- CHAT MESSAGES -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="@dimen/spacing_xs"
            android:paddingBottom="@dimen/spacing_xs"
            android:paddingStart="@dimen/spacing_sm"
            android:paddingEnd="@dimen/spacing_sm"
            android:scrollbars="none"
            android:overScrollMode="ifContentScrolls"/>

    <!-- INPUT AREA -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/surface"
            android:elevation="@dimen/elevation_lg">

        <!-- TOP DIVIDER -->
        <View
                style="@style/Widget.App.Divider"
                android:background="@color/border_light"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/spacing_md"
                android:paddingEnd="@dimen/spacing_md"
                android:paddingTop="@dimen/spacing_sm"
                android:paddingBottom="@dimen/spacing_sm">

            <!-- INPUT CARD -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="@dimen/elevation_none"
                    app:strokeWidth="@dimen/border_thin"
                    app:strokeColor="@color/border_strong"
                    app:cardBackgroundColor="@color/surface">

                <EditText
                        android:id="@+id/etChatInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/chat_hint"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="@dimen/text_body"
                        android:maxLines="4"
                        android:minHeight="44dp"
                        android:inputType="textCapSentences|textMultiLine"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_tertiary"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- SEND BUTTON -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="@dimen/elevation_none"
                    app:cardBackgroundColor="@color/primary">

                <ImageView
                        android:id="@+id/btnSend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_send"
                        android:padding="10dp"
                        app:tint="@color/white"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@string/chat_hint"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>