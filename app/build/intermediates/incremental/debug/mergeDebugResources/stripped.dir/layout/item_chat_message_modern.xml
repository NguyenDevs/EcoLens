<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chatContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:paddingHorizontal="@dimen/spacing_md"
        android:paddingVertical="@dimen/spacing_xxs">

    <!-- MODERN CHAT MESSAGE -->

    <!-- MESSAGE BUBBLE -->
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xxs"
            style="@style/Widget.App.Card"
            app:cardCornerRadius="@dimen/radius_md"
            app:contentPadding="@dimen/spacing_sm">

        <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="230dp"
                android:textSize="@dimen/text_body"
                android:lineSpacingExtra="2dp"
                android:text="Hello"/>

    </com.google.android.material.card.MaterialCardView>

    <!-- AI MESSAGE ACTIONS -->
    <LinearLayout
            android:id="@+id/layoutAiActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

        <ImageView
                android:id="@+id/btnCopyAi"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="6dp"
                android:src="@drawable/ic_copy"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/text_tertiary"
                android:contentDescription="@string/copy_scientific_name"/>

        <ImageView
                android:id="@+id/btnShareAi"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="6dp"
                android:layout_marginStart="@dimen/spacing_xs"
                android:src="@drawable/ic_share"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/text_tertiary"
                android:contentDescription="@string/share_info"/>

        <ImageView
                android:id="@+id/btnRenewAi"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="6dp"
                android:layout_marginStart="@dimen/spacing_xs"
                android:src="@drawable/ic_rotate"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/text_tertiary"
                android:contentDescription="@string/btn_retry_identification"/>
    </LinearLayout>

</LinearLayout>