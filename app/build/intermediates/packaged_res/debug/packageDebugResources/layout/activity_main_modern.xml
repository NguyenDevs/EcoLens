<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".MainActivity">

    <!-- MODERN ACTIVITY MAIN -->

    <!-- MAIN CONTENT CONTAINER -->
    <FrameLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">

        <include
                android:id="@+id/homeContainer"
                layout="@layout/screen_home_modern"
                android:visibility="visible"/>

        <FrameLayout
                android:id="@+id/historyContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

        <FrameLayout
                android:id="@+id/myGardenContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

        <include
                android:id="@+id/settingsContainer"
                layout="@layout/screen_settings_modern"
                android:visibility="gone"/>

        <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"/>
    </FrameLayout>

    <!-- SEARCH BAR -->
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/searchBarContainer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_marginEnd="@dimen/spacing_md"
            android:layout_gravity="top|end"
            app:cardCornerRadius="@dimen/radius_full"
            app:cardElevation="@dimen/elevation_md"
            app:cardBackgroundColor="@color/surface">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

            <ImageView
                    android:id="@+id/btnSearchAction"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/search"
                    android:padding="@dimen/spacing_sm"
                    android:src="@drawable/ic_search"
                    app:tint="@color/primary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutSearch"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:layout_marginEnd="10dp"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/primary"
                    app:hintEnabled="false"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/btnSearchAction"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSearchQuery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/search_hint"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="@dimen/text_body"
                        android:paddingStart="@dimen/spacing_sm"
                        android:paddingEnd="@dimen/spacing_xxxl"
                        android:textColorHint="@color/text_tertiary"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- VOICE CONTROL BUTTONS -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSpeak"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="@dimen/spacing_md"
            android:contentDescription="@string/speak"
            android:src="@drawable/ic_speak"
            app:fabSize="normal"
            app:maxImageSize="30dp"
            app:fabCustomSize="50dp"
            style="@style/Widget.App.FloatingActionButton"
            app:elevation="@dimen/elevation_xs"
            app:layout_anchorGravity="top|end"
            android:layout_gravity="top|end"
            android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMute"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="@dimen/spacing_md"
            android:contentDescription="@string/mute"
            android:src="@drawable/ic_mute"
            app:fabSize="normal"
            app:maxImageSize="30dp"
            app:fabCustomSize="50dp"
            app:backgroundTint="@color/error"
            app:tint="@color/white"
            app:elevation="@dimen/elevation_xs"
            app:borderWidth="0dp"
            app:layout_anchorGravity="top|end"
            android:layout_gravity="top|end"
            android:visibility="gone"/>

    <!-- CAMERA FAB BACKGROUND -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCameraNav"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:elevation="0dp"
            android:layout_marginBottom="22dp"
            android:scaleType="center"
            app:fabCustomSize="90dp"
            app:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.SmallComponent"
            app:layout_anchor="@id/bottomNavigation"
            app:layout_anchorGravity="top|center_horizontal"
            android:translationY="18dp"
            android:clickable="false"
            android:focusable="false"/>

    <!-- BOTTOM NAVIGATION -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bottom_nav_background"
            android:elevation="@dimen/bottom_nav_elevation"
            style="@style/Widget.App.BottomNavigationView"
            app:itemTextAppearanceActive="@style/BottomNavTextRegular"
            app:itemTextAppearanceInactive="@style/BottomNavTextRegular"
            app:menu="@menu/bottom_nav_menu"
            app:itemRippleColor="@null"
            android:paddingBottom="10dp"/>

    <!-- CAMERA FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCamera"
            android:layout_width="@dimen/fab_size_large"
            android:layout_height="@dimen/fab_size_large"
            android:layout_marginBottom="22dp"
            android:src="@drawable/ic_camera"
            android:contentDescription="@string/camera"
            android:scaleType="center"
            app:fabCustomSize="@dimen/fab_size_large"
            app:maxImageSize="50dp"
            style="@style/Widget.App.FloatingActionButton"
            app:elevation="27dp"
            app:pressedTranslationZ="20dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.SmallComponent"
            app:layout_anchor="@id/bottomNavigation"
            app:layout_anchorGravity="top|center_horizontal"
            android:translationY="18dp"
            android:translationZ="12dp"/>

    <!-- FULLSCREEN IMAGE VIEWER -->
    <FrameLayout
            android:id="@+id/fullScreenContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:elevation="100dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true">

        <ImageView
                android:id="@+id/fullScreenImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:contentDescription="@string/fullscreen_image"/>

        <ImageView
                android:id="@+id/btnZoomOut"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/spacing_xl"
                android:src="@drawable/ic_zoomout"
                android:background="@drawable/rounded_dark_bg"
                android:padding="@dimen/spacing_sm"
                app:tint="@color/white"
                android:contentDescription="@string/zoom_out"/>
    </FrameLayout>

    <!-- FRAGMENT CONTAINER -->
    <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:translationZ="100dp"
            android:clickable="true"
            android:focusable="true"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>