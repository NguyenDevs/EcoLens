<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_screen_horizontal"
        android:paddingEnd="@dimen/padding_screen_horizontal"
        android:paddingTop="@dimen/padding_screen_vertical"
        android:paddingBottom="10dp">

    <!-- MODERN SETTINGS SCREEN -->

    <!-- HEADER -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:text="@string/settings_title"
            style="@style/TextAppearance.App.Display"

            android:textColor="@color/primary"/>

    <!-- PREFERENCES SECTION -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:layout_marginStart="@dimen/spacing_xxs"
            android:text="@string/preferences"
            style="@style/TextAppearance.App.Label"/>

    <!-- LANGUAGE OPTION -->
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/languageOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            style="@style/Widget.App.Card"
            app:cardCornerRadius="@dimen/radius_md"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_md">

            <FrameLayout
                    android:layout_width="@dimen/icon_xl"
                    android:layout_height="@dimen/icon_xl"
                    android:background="@drawable/bg_flag_rounded"
                    android:backgroundTint="@color/surface_tint">
                <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_language"
                        app:tint="@color/primary"/>
            </FrameLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language_label"
                        style="@style/TextAppearance.App.Body1"
                        android:textColor="@color/primary_dark"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/tvCurrentLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/lang_english"
                        style="@style/TextAppearance.App.Body2"
                        android:textColor="@color/primary_dark"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ABOUT SECTION -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:layout_marginStart="@dimen/spacing_xxs"
            android:text="@string/about_label"
            style="@style/TextAppearance.App.Label"/>

    <!-- ABOUT OPTION -->
    <com.google.android.material.card.MaterialCardView
            android:id="@+id/aboutOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.App.Card"
            app:cardCornerRadius="@dimen/radius_md"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_md">

            <FrameLayout
                    android:layout_width="@dimen/icon_xl"
                    android:layout_height="@dimen/icon_xl"
                    android:background="@drawable/bg_flag_rounded"
                    android:backgroundTint="@color/surface_tint">

                <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_info"
                        app:tint="@color/primary"/>
            </FrameLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_app_title"
                        style="@style/TextAppearance.App.Body1"
                        android:textColor="@color/primary_dark"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="EcoLens v1.0"
                        style="@style/TextAppearance.App.Body2"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>