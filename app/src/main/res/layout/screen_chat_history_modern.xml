<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

    <!-- MODERN CHAT HISTORY SCREEN -->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_screen_horizontal"
            android:animateLayoutChanges="true"
            android:paddingEnd="@dimen/padding_screen_horizontal"
            android:paddingTop="@dimen/padding_screen_vertical"
            android:paddingBottom="10dp">

        <!-- HEADER -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:text="@string/my_garden_title"
                style="@style/TextAppearance.App.Display"
                android:textColor="@color/primary"/>

        <!-- CONTENT WRAPPER -->
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <!-- CHAT HISTORY LIST -->
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvChatHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:scrollbars="none"
                    android:overScrollMode="ifContentScrolls"
                    android:paddingBottom="80dp"/>

            <!-- EMPTY STATE -->
            <LinearLayout
                    android:layout_marginTop="34.5dp"
                    android:id="@+id/emptyStateContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/spacing_xl">

                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_chat_bot"
                        android:alpha="0.3"
                        app:tint="@color/text_secondary"
                        android:contentDescription="@string/my_garden_title"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_empty"
                        style="@style/TextAppearance.App.Headline3"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="@dimen/spacing_md"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/garden_subtitle"
                        style="@style/TextAppearance.App.Body2"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:textAlignment="center"/>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <!-- NEW CHAT FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabNewChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/spacing_lg"
            android:layout_marginBottom="100dp"
            android:textColor="@color/white"
            app:icon="@drawable/ic_chat_add"
            app:iconSize="@dimen/icon_lg"
            app:iconTint="@color/white"
            style="@style/Widget.App.FloatingActionButton"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>