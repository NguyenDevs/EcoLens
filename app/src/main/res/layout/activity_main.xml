<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     xmlns:tools="http://schemas.android.com/tools"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:background="@color/background_color"
                                                     tools:context=".MainActivity">

    <FrameLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">

        <include
                android:id="@+id/homeContainer"
                layout="@layout/screen_home"
                android:visibility="visible"/>

        <FrameLayout
                android:id="@+id/historyContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

        <include
                android:id="@+id/settingsContainer"
                layout="@layout/screen_settings"
                android:visibility="gone"/>

        <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"/>
    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/searchBarContainer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="top|end"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/btnSearchAction"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/search"
                    android:padding="12dp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/green_primary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutSearch"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="10dp"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/green_primary"
                    app:hintEnabled="false"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/btnSearchAction"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSearchQuery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/search_hint"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="48dp"
                        android:textColorHint="@color/gray" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSpeak"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/speak"
            android:src="@drawable/ic_speak"
            app:fabSize="normal"
            app:maxImageSize="30dp"
            app:fabCustomSize="50dp"
            app:backgroundTint="@color/green_primary"
            app:tint="@color/white"
            app:elevation="1dp"
            app:borderWidth="0dp"
            app:layout_anchorGravity="top|end"
            android:layout_gravity="top|end"
            android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMute"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/mute"
            android:src="@drawable/ic_mute"
            app:fabSize="normal"
            app:maxImageSize="30dp"
            app:fabCustomSize="50dp"
            app:backgroundTint="#D32F2F"
            app:tint="@color/white"
            app:elevation="1dp"
            app:borderWidth="0dp"
            app:layout_anchorGravity="top|end"
            android:layout_gravity="top|end"
            android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCameraNav"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:elevation="0dp"
            android:layout_marginBottom="22dp"
            android:scaleType="center"
            app:fabCustomSize="90dp"
            app:backgroundTint="#FFFFFF"
            app:labelVisibilityMode="labeled"
            app:borderWidth="0dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.FAB.Round"
            app:layout_anchor="@id/bottomNavigation"
            app:layout_anchorGravity="top|center_horizontal"
            android:translationY="18dp"
            android:clickable="false"
            android:focusable="false"
    />

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bottom_nav_background"
            android:elevation="26dp"
            app:itemIconTint="@color/bottom_nav_color"
            app:itemTextColor="@color/bottom_nav_color"
            app:labelVisibilityMode="labeled"
            app:itemIconSize="24dp"
            style="@style/BottomNavigationViewCustom"
            app:menu="@menu/bottom_nav_menu"
            app:itemRippleColor="@null"
            android:paddingBottom="10dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCamera"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="22dp"
            android:src="@drawable/ic_camera"
            android:contentDescription="@string/camera"
            android:scaleType="center"
            app:fabCustomSize="70dp"
            app:maxImageSize="40dp"
            app:backgroundTint="@color/green_primary"
            app:tint="@android:color/white"
            app:elevation="27dp"
            app:pressedTranslationZ="20dp"
            app:borderWidth="0dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.FAB.Round"
            app:layout_anchor="@id/bottomNavigation"
            app:layout_anchorGravity="top|center_horizontal"
            android:translationY="18dp"
            android:translationZ="12dp" />


    <FrameLayout
            android:id="@+id/fullScreenContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:elevation="100dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true">

        <ImageView
                android:id="@+id/fullScreenImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:contentDescription="@string/fullscreen_image" />

        <ImageView
                android:id="@+id/btnZoomOut"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="32dp"
                android:src="@drawable/ic_zoomout"
                android:background="@drawable/rounded_dark_bg"
                android:padding="12dp"
                app:tint="@android:color/white"
                android:contentDescription="@string/zoom_out" />

    </FrameLayout>

    <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:translationZ="100dp"
            android:clickable="true"
            android:focusable="true"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>