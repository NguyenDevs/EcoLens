<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="16dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:cardBackgroundColor="@android:color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
    >

        <!-- Common Name -->
        <TextView
                android:id="@+id/tvCommonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_common_name"
                android:textSize="24sp"
                android:textColor="#00796B"
                android:textStyle="bold" />

        <!-- Scientific Name with Copy Button -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/tvScientificName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_scientific_name"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:textColor="#757575" />

            <ImageView
                    android:id="@+id/btnCopyScientificName"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_copy"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:alpha="0.6"
                    android:contentDescription="@string/copy_scientific_name" />
            <ImageView
                    android:id="@+id/btnShareInfo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_share"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:alpha="0.6"
                    android:contentDescription="@string/share_info" />
        </LinearLayout>

        <!-- Confidence Badge -->
        <com.google.android.material.card.MaterialCardView
                android:id="@+id/confidenceCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#E8F5E9"
                app:cardElevation="0dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical">

                <ImageView
                        android:id="@+id/iconConfidence"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="@string/confidence" />

                <TextView
                        android:id="@+id/tvConfidence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confidence_format"
                        android:textColor="#00796B"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Divider -->
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

        <!-- Taxonomy Section -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/taxonomy_title"
                android:textSize="20sp"
                android:textColor="#00796B"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

        <!-- Taxonomy Rows -->
        <LinearLayout
                android:id="@+id/taxonomyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Giới -->
            <LinearLayout
                    android:id="@+id/rowKingdom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_kingdom"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                <TextView
                        android:id="@+id/tvKingdom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textSize="14sp"
                        android:textColor="#424242" />
            </LinearLayout>

            <!-- Ngành -->
            <LinearLayout
                    android:id="@+id/rowPhylum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_phylum"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                <TextView
                        android:id="@+id/tvPhylum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textSize="14sp"
                        android:textColor="#424242" />
            </LinearLayout>

            <!-- Lớp -->
            <LinearLayout
                    android:id="@+id/rowClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_class"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                <TextView
                        android:id="@+id/tvClass"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textSize="14sp"
                        android:textColor="#424242" />
            </LinearLayout>

            <!-- Bộ -->
            <LinearLayout
                    android:id="@+id/rowOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_order"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                <TextView
                        android:id="@+id/tvOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textSize="14sp"
                        android:textColor="#424242" />
            </LinearLayout>

            <!-- Họ -->
            <LinearLayout
                    android:id="@+id/rowFamily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_family"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                <TextView
                        android:id="@+id/tvFamily"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textSize="14sp"
                        android:textColor="#424242" />
            </LinearLayout>

            <!-- Chi -->
            <LinearLayout
                    android:id="@+id/rowGenus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_genus"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                <TextView
                        android:id="@+id/tvGenus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textSize="14sp"
                        android:textColor="#424242" />
            </LinearLayout>

            <!-- Loài -->
            <LinearLayout
                    android:id="@+id/rowSpecies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_species"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                <TextView
                        android:id="@+id/tvSpecies"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textSize="14sp"
                        android:textColor="#424242" />
            </LinearLayout>

        </LinearLayout>

        <!-- Description Section -->
        <LinearLayout
                android:id="@+id/sectionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_description"
                    android:textSize="20sp"
                    android:textColor="#00796B"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="8dp"
                    android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Characteristics Section -->
        <LinearLayout
                android:id="@+id/sectionCharacteristics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_characteristics"
                    android:textSize="20sp"
                    android:textColor="#00796B"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvCharacteristics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="8dp"
                    android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Distribution Section -->
        <LinearLayout
                android:id="@+id/sectionDistribution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_distribution"
                    android:textSize="20sp"
                    android:textColor="#00796B"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvDistribution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="8dp"
                    android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Habitat Section -->
        <LinearLayout
                android:id="@+id/sectionHabitat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_habitat"
                    android:textSize="20sp"
                    android:textColor="#00796B"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvHabitat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="8dp"
                    android:layout_marginTop="8dp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/sectionConservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_conservation"
                    android:textSize="20sp"
                    android:textColor="#00796B"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvConservationStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="8dp"
                    android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>