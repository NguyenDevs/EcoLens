<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.App.Card"
        app:cardCornerRadius="@dimen/radius_md">

    <!-- MODERN SPECIES INFO CARD -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

        <!-- HEADER SECTION -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

            <!-- LEFT: NAME SECTION -->
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvCommonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_common_name"
                        style="@style/TextAppearance.App.Headline1"
                        android:textColor="@color/primary"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                    <TextView
                            android:id="@+id/tvScientificName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_scientific_name"
                            style="@style/TextAppearance.App.Body1"
                            android:textColor="@color/text_secondary"
                            android:textStyle="italic"/>

                    <ImageView
                            android:id="@+id/btnCopyScientificName"
                            android:layout_width="@dimen/icon_md"
                            android:layout_height="@dimen/icon_md"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:alpha="0.6"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="@dimen/spacing_xxs"
                            android:src="@drawable/ic_copy"
                            android:contentDescription="@string/copy_scientific_name"
                            app:tint="@color/text_secondary"/>
                </LinearLayout>

                <!-- CONFIDENCE BADGE - Moved here -->
                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/confidenceCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        app:cardCornerRadius="@dimen/radius_full"
                        app:cardElevation="@dimen/elevation_none"
                        app:strokeWidth="0dp">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/spacing_sm"
                            android:paddingTop="6dp"
                            android:paddingEnd="@dimen/spacing_md"
                            android:paddingBottom="6dp">

                        <ImageView
                                android:id="@+id/iconConfidence"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:contentDescription="@string/confidence"
                                android:src="@drawable/ic_check_circle"/>

                        <TextView
                                android:id="@+id/tvConfidence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_xs"
                                android:text="@string/confidence_format"
                                style="@style/TextAppearance.App.Label"
                                android:textAllCaps="false"
                                android:textSize="@dimen/text_label"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- RIGHT: ACTION BUTTONS -->
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                <ImageView
                        android:id="@+id/btnShareInfo"
                        android:layout_width="@dimen/icon_xl"
                        android:layout_height="@dimen/icon_xl"
                        android:background="@drawable/bg_white_rounded"
                        android:backgroundTint="@color/surface_tint"
                        android:padding="10dp"
                        android:src="@drawable/ic_share"
                        android:contentDescription="@string/share_info"
                        app:tint="@color/primary"/>

                <ImageView
                        android:id="@+id/btnRetryIdentification"
                        android:layout_width="@dimen/icon_xl"
                        android:layout_height="@dimen/icon_xl"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:background="@drawable/bg_white_rounded"
                        android:backgroundTint="@color/surface_tint"
                        android:padding="10dp"
                        android:src="@drawable/ic_rotate"
                        android:contentDescription="@string/btn_retry_identification"
                        app:tint="@color/warning"/>
            </LinearLayout>

        </LinearLayout>

        <!-- DIVIDER -->
        <View
                style="@style/Widget.App.Divider"
                android:layout_marginTop="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_lg"/>

        <!-- TAXONOMY SECTION -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="@string/taxonomy_title"
                style="@style/TextAppearance.App.Headline3"/>

        <LinearLayout
                android:id="@+id/taxonomyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_rounded"
                android:backgroundTint="@color/surface_variant"
                android:orientation="vertical"
                android:padding="20dp">

            <!-- TAXONOMY ROWS -->
            <LinearLayout
                    android:id="@+id/rowKingdom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/spacing_xs">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_kingdom"
                        style="@style/Widget.App.Taxonomy.Label"/>
                <TextView
                        android:id="@+id/tvKingdom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        style="@style/Widget.App.Taxonomy.Value"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/rowPhylum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/spacing_xs">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_phylum"
                        style="@style/Widget.App.Taxonomy.Label"/>
                <TextView
                        android:id="@+id/tvPhylum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        style="@style/Widget.App.Taxonomy.Value"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/rowClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/spacing_xs">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_class"
                        style="@style/Widget.App.Taxonomy.Label"/>
                <TextView
                        android:id="@+id/tvClass"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        style="@style/Widget.App.Taxonomy.Value"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/rowOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/spacing_xs">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_order"
                        style="@style/Widget.App.Taxonomy.Label"/>
                <TextView
                        android:id="@+id/tvOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        style="@style/Widget.App.Taxonomy.Value"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/rowFamily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/spacing_xs">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_family"
                        style="@style/Widget.App.Taxonomy.Label"/>
                <TextView
                        android:id="@+id/tvFamily"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        style="@style/Widget.App.Taxonomy.Value"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/rowGenus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/spacing_xs">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_genus"
                        style="@style/Widget.App.Taxonomy.Label"/>
                <TextView
                        android:id="@+id/tvGenus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        style="@style/Widget.App.Taxonomy.Value"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/rowSpecies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/label_species"
                        style="@style/Widget.App.Taxonomy.Label"
                        android:layout_marginBottom="0dp"/>
                <TextView
                        android:id="@+id/tvSpecies"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        style="@style/Widget.App.Taxonomy.Value"
                        android:layout_marginBottom="0dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- DESCRIPTION SECTION -->
        <LinearLayout
                android:id="@+id/sectionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_lg"
                android:visibility="visible">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_description"
                    style="@style/TextAppearance.App.Headline3"/>

            <View
                    style="@style/Widget.App.Divider"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:layout_marginBottom="@dimen/spacing_xs"/>

            <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.App.Body1"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="6dp"/>
        </LinearLayout>

        <!-- CHARACTERISTICS SECTION -->
        <LinearLayout
                android:id="@+id/sectionCharacteristics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_lg"
                android:visibility="visible">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_characteristics"
                    style="@style/TextAppearance.App.Headline3"/>

            <View
                    style="@style/Widget.App.Divider"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:layout_marginBottom="@dimen/spacing_xs"/>

            <TextView
                    android:id="@+id/tvCharacteristics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.App.Body1"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="6dp"/>
        </LinearLayout>

        <!-- DISTRIBUTION SECTION -->
        <LinearLayout
                android:id="@+id/sectionDistribution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_lg"
                android:visibility="visible">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_distribution"
                    style="@style/TextAppearance.App.Headline3"/>

            <View
                    style="@style/Widget.App.Divider"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:layout_marginBottom="@dimen/spacing_xs"/>

            <TextView
                    android:id="@+id/tvDistribution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.App.Body1"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="6dp"/>
        </LinearLayout>

        <!-- HABITAT SECTION -->
        <LinearLayout
                android:id="@+id/sectionHabitat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_lg"
                android:visibility="visible">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_habitat"
                    style="@style/TextAppearance.App.Headline3"/>

            <View
                    style="@style/Widget.App.Divider"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:layout_marginBottom="@dimen/spacing_xs"/>

            <TextView
                    android:id="@+id/tvHabitat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.App.Body1"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="6dp"/>
        </LinearLayout>

        <!-- CONSERVATION SECTION -->
        <LinearLayout
                android:id="@+id/sectionConservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_lg"
                android:visibility="visible">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_conservation"
                    style="@style/TextAppearance.App.Headline3"/>

            <View
                    style="@style/Widget.App.Divider"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:layout_marginBottom="@dimen/spacing_xs"/>

            <TextView
                    android:id="@+id/tvConservationStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.App.Body1"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="6dp"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>